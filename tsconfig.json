{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "noImplicitAny": true,
        "declaration": true,
        "sourceMap": true,
        "outDir": "dst",
        "strictNullChecks": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noUnusedLocals": true,
        "lib": [
            "esnext",
            "esnext.asynciterable"
        ]
    },
    "exclude": [
        "**/__test__/"
    ],
    "include": [
        "src/**/*"
    ]
}
